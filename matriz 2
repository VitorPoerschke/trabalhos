//3-Criar um programa que leia e imprima os valores de uma matriz 2 X 3
//do tipo inteiro.

#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
	
	
	 int matriz [2][3];
	 int i = 0;
	 int j = 0;
	
	
	for(i=0; i<2; i++){
	for(j=0; j<3; j++){
		
	matriz[i][j] = 0;
			
     	}				
    }
	
	
	for(i=0; i<2; i++){
	for(j=0; j<3; j++){
		
	printf("Digite a linha %d e coluna %d: ",i+1,j+1);
	scanf("%d",&matriz[i][j]);

     	}				
    }
	
	printf("\nSua matriz:\n");
	for(i=0; i<2; i++){
	for(j=0; j<3; j++){
	printf("[%d]",matriz[i][j]);
			
     	}
	printf("\n");				
    }
	
	system("pause");
	return 0;
}

